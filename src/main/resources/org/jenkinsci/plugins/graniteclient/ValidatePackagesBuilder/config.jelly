<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form" xmlns:creds="/lib/credentials">

    <f:entry title="Package ID" field="packageIdFilters">
        <f:expandableTextbox/>
    </f:entry>

    <f:entry title="Local Directory" field="localDirectory">
        <f:textbox/>
    </f:entry>

    <f:advanced title="Validation Options">

        <f:entry title="Forbidden Extensions" field="forbiddenExtensions">
            <f:textarea/>
        </f:entry>

        <f:entry title="Forbidden AC Handling Modes" field="forbiddenACHandlingModeSet">
            <f:select default="${descriptor.ACMODE_SKIP_VALIDATION}"/>
        </f:entry>

        <f:entry title="Forbidden Filter Root Prefixes" field="forbiddenFilterRootPrefixes">
            <f:textarea/>
        </f:entry>

        <f:entry title="Paths Denied for Inclusion" field="pathsDeniedForInclusion">
            <f:textarea/>
        </f:entry>

        <f:entry title="Validation Workspace Filter" field="validationFilter">
            <f:textarea/>
        </f:entry>

        <f:entry title="Allow Non-covered Roots" field="allowNonCoveredRoots">
            <f:checkbox />
        </f:entry>

    </f:advanced>

</j:jelly>
